<html>
    <head>
        <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
        <link rel="stylesheet" href="/css/bootstrap-theme.min.css" type="text/css">
        <link rel="stylesheet" href="/css/styles.css" type="text/css">
        <meta charset="utf-8">
        <title>Shoe Store Finder</title>
    </head>
    <body>
        <div class="container">
          <div class="row">
                <div class="col-md-8 col-md-offset-2">
              <h1><a href="/"><i>SHOE STORE FINDER</i></a></h1>
                </div>
         </div>

            <div class="row">
              <div class="col-md-4 col-md-offset-2">
                  <h2>Stores</h2>
                  {% if stores is not empty %}
                      {% for store in stores %}
                  <ul>
                      <li><a href="/store/{{ store.getId }}"><h4>{{ store.getName }}</h4></a><a href="/store/{{store.getId}}/edit"> Edit</a></li>
                  </ul>
                      {% endfor %}
                  {% else %}
                  <p>No stores added yet!</p>
                  {% endif %}

                  <form action="/delete_all" method="post">
                      <button type="submit" class="btn btn-danger">Delete All</button>
                  </form>

            </div>
            <div class="col-md-4">
                <h2>Add Store</h2>
                <form action="/add_store" method="post">
                    <div class="form-group">
                    <label name ="enter_store">Enter a store</label>
                    <input type="text" name="name" required>
                    </div>
                    <button type="submit" class="btn btn-info">Add store</button>
                </form>


                {% if brands is not empty %}
                <h2>Current Brands</h2>
                    {% for brand in brands %}
                <ul>
                    <li><a href="/brand/{{ brand.getId }}"><h4>{{ brand.getName }}</h4></a></li>
                </ul>
                    {% endfor %}
                <form action="/delete_brands" method="post">
                    <button type="submit" class="btn btn-danger">Delete All</button>
                </form>
                {% endif %}

            </div>
            </div>


        </div>


    </body>
</html>
