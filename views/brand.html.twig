<html>
    <head>
        <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
        <link rel="stylesheet" href="/css/bootstrap-theme.min.css" type="text/css">
        <link rel="stylesheet" href="/css/styles.css" type="text/css">
        <meta charset="utf-8">
        <title>Shoe Store Finder</title>
    </head>
    <body>
        <div class="container">
          <div class="row">
                <div class="col-md-8 col-md-offset-2">
              <h1><a href="/"><i>SHOE STORE FINDER</i></a></h1>
                </div>
         </div>

            <div class="row">
              <div class="col-md-4 col-md-offset-2">
        <h2><i>{{ brand.getName }}</i></h2>
        <h3>Stores:</h3>
            {% if stores is not empty %}
                {% for store in stores %}
            <ul>
                <li><a href="/store/{{ store.getId }}"><h4>{{ store.getName }}</h4></a></li>
            </ul>
                {% endfor %}
            {% else %}
            <p>No stores added yet!</p>
            {% endif %}
        </div>

    <div class="col-md-4">


    <h2>Add Store</h2>
    <form action="/brand/{{brand.getId}}/add_store" method="post">
        <div class="form-group">
        <label name ="enter_store">Enter a store</label>
        <select name="id">
            {% if all_stores is not empty %}
                {% for store in all_stores %}
            <option value="{{store.getId}}">{{ store.getName }}</option>
            {% endfor %}
            {% endif %}
        </select>
        </div>
        <button type="submit" class="btn btn-info">Add store</button>
    </form>
        {% if error is not empty %}
        <i>{{ error }}!</i>
        {% endif %}
        </div>
        </div>
    </div>
    </body>
</html>
